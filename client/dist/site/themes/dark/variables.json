  "border": {
    "color": "#4d545b",
    "width": "1px"
  },
  "borderRadiuses": {
    "default": "2px",
    "lg": "2px",
    "sm": "2px"
  },
  "boxShadows": {
    "default": "0 0 10px 2px rgba(0,0,0, .2)",
    "lg": "0 0 10px 4px rgba(0,0,0,0.3)",
    "sm": "0 0 6px rgba(0,0,0, .2)"
  },
  "body": {
    "bg": "#282828",
    "color": "#fff"
  },
  "header": {
    "bg": "#000",
    "color": "#fff"
  },
  "surfaces": {
    "1": {
      "bg": "var(--light-400)",
      "border": {
        "width": "1px",
        "color": "var(--light-600)"
      }
    },
    "2": {
      "bg": "var(--light-300)",
      "border": {
        "width": "1px",
        "color": "var(--light-600)"
      }
    }
  },
  "components": {
    "button": {
      "sizes": {
        "default": {
          "paddingX": "8px",
          "paddingY": "4px"
        },
        "sm": {
          "paddingX": "6px",
          "paddingY": "4px"
        },
        "lg": {
          "paddingX": "20px",
          "paddingY": "8px"
        }
      },
      "variants": {
        "primary": {
          "hover": {
            "bg": "var(--primary-600)",
            "border": {
              "color": "var(--primary-600)",
              "width": "1px"
            }
          }
        },
        "tertiary": {
          "default": {
            "color": "#c5c5c5"
          },
          "hover": {
            "bg": "transparent",
            "border": {
              "color": "transparent",
              "width": "1px"
            }
          }
        }
      }
    },
    "modal": {
      "header": {
        "border": {
          "color": "#6A6A6A"
        }
      }
    }
  }
}